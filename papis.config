[settings]
default-library = main

[library:main]
path = ./library
dir-format = {doc[year]}-{doc[author_list][0][surname]}-{doc[title_slug]}
file-format = {doc[year]}-{doc[author_list][0][surname]}-{doc[title_slug]}
opentool = open
# This hook will run after adding a paper to generate the Typst project
post-add-command = python3 ../scripts/scaffold.py "{doc_path}"

