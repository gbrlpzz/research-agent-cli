  url = {https://doi.org/10.1177/17470161221094134},
  volume = {18},
  year = {2022},
  localdata = {/Users/gabriele/Documents/GitHub/research-agent-cli/library/4d8608bb1fc5768de6a9c82c70e3dac3/info.yaml},
