  journal = {International Journal of Science and Research Archive},
  month = {5},
  pages = {676--694},
  publisher = {GSC Online Press},
  title = {Peace-informed development planning: Aligning human security, infrastructure investment, and conflict sensitivity in fragile states post-conflict societies},
